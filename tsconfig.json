{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "jsx": "react-jsx",
    "lib": ["ES2017", "DOM", "ES2020"],
    "target": "ES2017",
    "resolveJsonModule": true,
    "skipLibCheck": true
  },
  "exclude": ["__tests__/**/*"]
}
